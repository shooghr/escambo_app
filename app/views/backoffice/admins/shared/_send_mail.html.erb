<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">New Message</h4>
      </div>
        <%= form_tag(backoffice_send_mail_index_path, remote: true) do %>
          <div class="modal-body">
              <div class="form-group">
                <label for="recipient-text" class="control-label">Recipient:</label>
                <%= text_field_tag(:'recipient-text', nil, class: 'form-control', disabled: 'disabled') %>
              </div>
              <div class="form-group">
                <label for="subject-text" class="control-label">Subject:</label>
                <%= text_field_tag(:'subject-text', nil, class: 'form-control', required: "required") %>
              </div>
              <div class="form-group">
                <label class="control-label" for="message-text">Message:</label>
                <%= text_area_tag(:'message-text', nil, class: 'form-control') %>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= submit_tag 'Send message', class: 'btn btn-primary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>